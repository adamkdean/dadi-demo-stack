{
  "datasource": {
    "key": "wordpress-post",
    "name": "WordPress single post datasource",
    "source": {
      "type": "wordpress",
      "endpoint": "sites/neversettleblog.wordpress.com/posts/slug:$post_slug"
    },
    "caching": {
      "enabled": true,
      "ttl": 1200
    },
    "paginate": true,
    "count": 5,
    "sort": {
      "_id": -1
    },
    "search": {},
    "fields": {
    },
    "filter": {
      "type": "post"
    },
    "endpointParams": [
      {
        "param": "slug",
        "field": "post_slug"
      }
    ],
    "requestParams": []
  }
}
